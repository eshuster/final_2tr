<h1>Questions</h1>

<%= form_for @question, url: questions_path do |f| %>
  <p><%= f.label :title %></p>
  <p><%= f.text_field :title %></p>
  <p><%= f.label :content %></p>
  <p><%= f.text_field :content %></p>
  <%= f.submit %>
<% end %>

<div class="questions-container">
  <% @questions.each do |question| %>
    <div class="question">
      <p><%= question.title %></p>
      <p><%= question.content %></p>
    </div>
  <% end %>
</div>
