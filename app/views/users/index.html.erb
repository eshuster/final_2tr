<div class="top-container">
  <title>2TR Online Learning Can be Easier</title>
  <div id="user_nav" >
   <% if user_signed_in? %>
   <% if session[:linkedin_token].nil? %>
   <div class="logged_in">
     Welcome <%= link_to current_user.email, profile_path(current_user) %>
     <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
   </div>
   <% else %>
   <div class="logged_in">
     <a href=''>Welcome <%= current_user.email %></a>
     <%= link_to "Sign out", linkedin_logout_path, method: :delete %>
     <% end %>
     <% else %>
     <div id="not_logged_in">
      <div class="test">
      <%= link_to "âœ’ Become a Tutor", new_user_registration_path, method: :get %>
      </div>
      <div class="test">
